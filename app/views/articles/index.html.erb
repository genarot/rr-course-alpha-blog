<h1 class="text-center mt-4">Listing all Articles</h1>
<% if @articles.empty? %>
  <h3>No articles saved!</h3>
<% else %>
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-center">
        <div class="col-10 mt-4">
          <%= render :partial => 'article_card', :locals => {article: article} %>
        </div>
      </div>
      <%#= link_to 'Show', article_path(article) %>
      <%#= link_to 'Edit', edit_article_path(article) %>
      <%#= link_to 'Delete', article, method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
  </div>
<% end %>
<div class="mb-3">
  <%= link_to 'Create a new article', new_article_path %>
</div>