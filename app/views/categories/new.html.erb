<div class="container-fluid">
  <div class="col-10 mx-auto">
    <h1 align="center">Create a new Category</h1>
    <%= render 'shared/errors', model: @category %>
    <%= form_with(model: @category, class: "shadow p-3 mb-2 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Category Name" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :description, class: "form-control shadow rounded", placeholder: "Category Description" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%#= f.submit(@category.new_record? ? "Save" : "Update", class: "btn btn-outline-light btn-lg") %>
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
